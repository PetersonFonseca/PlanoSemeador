<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.planosemeador.planosemeador">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComoFuncionaActivity"
            android:label="@string/title_activity_como_funciona"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SobreNosActivity"
            android:label="@string/title_activity_sobre_nos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MedicosActivity"
            android:label="@string/title_activity_medicos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClinicasActivity"
            android:label="@string/title_activity_clinicas"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>