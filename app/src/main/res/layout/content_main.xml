<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/botaoProfissionaisSaudeId"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Médicos"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id2"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Clínicas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id3"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Laboratórios"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id4"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Farmácias"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id5"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Dentistas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id6"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Óticas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id7"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Academias"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id8"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Lojas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id9"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Cursos"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/conteudo_adicionar_pontos_id"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que você procura?"
                android:id="@+id/busca_text_id"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/busca_edit_id"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="25"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pesquisar_bt"
                android:text="Pesquisar"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>