<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/medicosBtId"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Médicos"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/clinicasBtId"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Clínicas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id3"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Laboratórios"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id4"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Farmácias"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id5"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Dentistas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id6"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Óticas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id7"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Academias"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id8"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Lojas"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
            <Button
                android:layout_width="@dimen/tamanho_botao"
                android:layout_height="wrap_content"
                android:id="@+id/id9"
                android:drawableTop="@drawable/ic_menu_gallery"
                android:background="@drawable/bota_arredondado"
                android:text="Cursos"
                android:textColor="#FFFFFF"
                android:layout_margin="@dimen/margem_botao"
                android:textSize="@dimen/letra_botao"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>